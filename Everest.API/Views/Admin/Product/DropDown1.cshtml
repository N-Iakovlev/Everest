@using Everest.API
@using Everest.Domain

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                @DataResource.CategoryName
            </button>
            <ul class="dropdown-menu">
                @foreach (var item in Html.Dispatcher().Query(new GetCategoryForDDQuery() { Type = Category.OfType.Product}))
                {
                    <li><a class="dropdown-item" href="#">@item.Text</a></li>
                }
            </ul>
        </div>
    </div>
</div>