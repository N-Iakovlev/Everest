@using Everest.API
@using Everest.Domain
@model Everest.Domain.AddOrEditCartLineCommand
@{
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
    ViewData["Title"] = DataResource.AddToCart;
    ViewData["Url"] = Url.Dispatcher().Push<AddOrEditCartLineCommand>();
    ViewData["TriggerId"] = nameof(GetCartLineQuery);
}

@Html.HiddenFor(q=>q.Id)
@Html.ForGroup(q => q.Quantity).TextBox(control => { control.Label.Name = DataResource.Quantity; })
@Html.ForGroup(q => q.Product).TextBox(control => { control.Label.Name = DataResource.ProductName; })




