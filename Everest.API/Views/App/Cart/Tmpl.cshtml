@using Everest.API
@using Everest.Domain
@{
    using (var template = Html.Incoding().Template<GetCartItemsByCurrentUserQuery.Response>())
    {
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
            <th>Автомобиль</th>
            <th>Количество</th>
            <th class="text-right">Стоимость</th>
            <th class="text-right">Общая стоимость</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var line in Model.Cart.Lines) {
            <tr>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-center">@line.Quantity</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Quantity * line.Product.Price).ToString("c"))
                </td>
                <td>
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="ProductID"
                               value="@line.Product.ProductID"/>
                        <input type="hidden" name="returnUrl"
                               value="@Model.ReturnUrl"/>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
            <tfoot>
            <tr>
            <td colspan="3" class="text-right">Общая цена:</td>
            <td class="text-right">
            @Model.Cart.ComputeTotalValue().ToString("c")
            </td>
            </tr>
            </tfoot>
            </table>

            <div class="text-center">
            <a class="btn btn-primary" href="@Model.ReturnUrl">Продожить покупки</a>
            <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">
                                                                            Оформить заказ
    </a>
</div>
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>@DataResource.ProductName</th>
                <th>@DataResource.Price</th>
                <th>@DataResource.Quantity</th>
                </tr>
            </thead>
            <tbody>
            @using (template.NotEach())
            {
                <tr>
                    <td colspan="3">
                            @DataResource.Empty
                    </td>
                </tr>
            }
            @using (var each = template.ForEach())
            {
                <tr>
                    <td>
                        <text>
                                           <i class="fas fa-pencil-alt">
                                           </i>
                                           @DataResource.Edit
                                       </text>))


                        
                              <text>
                                           <i class="fas fa-pencil-alt">
                                           </i>
                                           @DataResource.Delete
                                       </text>))
                    </td>
                    <td>
                        
                    </td>
                    
                    <td>
                        
                    </td>
                    <td>
                       
                    </td>
                    <td>
                           
                    </td>
                </tr>
            }

            </tbody>
        </table>
    }
}