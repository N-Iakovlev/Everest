@using Everest.Domain
@using Everest.API
@using (var template = Html.Incoding().Template<GetEmployeesQuery.Response>())
{
    @using (template.NotEach())
    {
        <div>@DataResource.Empty</div>
    }

    @using (var each = template.ForEach())
    {
        <div class="col-md-6">
            <div class="card mb-6" style="max-width: 200px;">
                <div class="card-body">

                    <td>
                        <img src="@(Url.Dispatcher().Query<GetAvatarTestQuery>(new { Id = each.For(q => q.Id) }).AsFile(incContentType: "image/jpeg", incFileDownloadName: "avatar"))"/>
                    </td>

                    
                    <p class="card-text">@each.For(q => q.FullName)</p>
                    @DataResource.Contacts: @each.For(q => q.Contacts)
                </div>
            </div>
        </div>
    }
}
<div class="people">
    <img src="@(Url.Dispatcher().Query<GetAvatarTestQuery>(new { Id = each.For(q => q.Id) }).AsFile(incContentType: "image/jpeg", incFileDownloadName: "avatar"))" />

    <span>
        @each.For(q => q.FullName)
    </span>

    <span>
        Главный бухгалтер
    </span>

    <a href="tel:+70000000002">
        <span class="material-symbols-outlined">
            @DataResource.Contacts:
        </span>

        <span>
            @each.For(q => q.Contacts)
        </span>
    </a>

    <a href="mailto:lermontov@mail.com">
        <span class="material-symbols-outlined">
            mail
        </span>

        <span>
            lermontov@mail.com
        </span>
    </a>
</div>