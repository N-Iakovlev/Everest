@using Everest.Domain
@using Everest.API
@using (var template = Html.Incoding().Template<GetProductQuery.Response>())
{
    @using (template.NotEach())
    {
        <div>@DataResource.Empty</div>
    }

    @using (var each = template.ForEach())
    {
        <div class="col-md-6">
            <div class="card mb-6" style="max-width: 200px;">
                 <div class="card-body">
                    <h6 class="card-title">@DataResource.ProductName</h6>
                    <p class="card-text">@each.For(q => q.ShortDescription)</p>
                    <p class="card-text"><strong>@DataResource.Price:</strong> $@each.For(q => q.Price)</p>
                    <a href="#" class="btn btn-primary">Купить</a> <!-- Кнопка "Купить" -->
                </div>
            </div>
        </div>
    }
}