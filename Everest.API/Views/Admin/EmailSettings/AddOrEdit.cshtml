@using Everest.API
@using Everest.Domain
@model Everest.Domain.AddOrEditEmailSettingsCommand
@{
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
    ViewData["Title"] = DataResource.Add;
    ViewData["Url"] = Url.Dispatcher().Push<AddOrEditEmailSettingsCommand>();
    ViewData["TriggerId"] = nameof(GetEmailSettingsQuery);
}

@Html.HiddenFor(q=>q.Id)
@Html.ForGroup(q => q.SmtpServer).TextBox(control => { control.Label.Name = DataResource.SmtpServer; })
@Html.ForGroup(q => q.Port).TextBox(control => { control.Label.Name = DataResource.Port; })
@Html.ForGroup(q => q.Username).TextBox(control => { control.Label.Name = DataResource.Email; })
@Html.ForGroup(q => q.Password).TextBox(control => { control.Label.Name = DataResource.Password; })


