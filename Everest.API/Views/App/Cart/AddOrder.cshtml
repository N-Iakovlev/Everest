@using Everest.API
@using Everest.Domain
@model Everest.Domain.AddOrderCommand
@{
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
    ViewData["Title"] = DataResource.Order;
    ViewData["Url"] = Url.Dispatcher().Push<AddOrderCommand>();
    ViewData["TriggerId"] = nameof(GetOrderQuery);
}

@Html.ForGroup(q => q.Comment).TextBox(control => { control.Label.Name = DataResource.Comment; })
@Html.ForGroup(q => q.Email).TextBox(control => { control.Label.Name = DataResource.Email; })
@Html.ForGroup(q => q.CreatorOrderName).TextBox(control => { control.Label.Name = DataResource.FullName; })
